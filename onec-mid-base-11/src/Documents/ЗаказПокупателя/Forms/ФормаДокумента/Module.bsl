&НаКлиенте
Процедура ПересчетТаблицыПоСтрокам()
	// {{ Алексеев М.Д.: Переесчет таблиц Товары и Услуги при изминении  поля  "ДС_СогласованнаяCкидка"
	ОбъектТаблицаТовары = Объект.Товары;
	ОбъектТаблицаУслуги = Объект.Услуги;
	
	Если ОбъектТаблицаТовары.Количество() = 0 Тогда
		Возврат;
	ИначеЕсли
		Объект.ДС_СогласованнаяCкидка <> "" Тогда 
		Для Каждого Строка Из ОбъектТаблицаТовары Цикл
			РассчитатьСуммуСтроки(Строка);
		КонецЦикла;
		Если ОбъектТаблицаУслуги.Количество() > 0 Тогда
			Для Каждого Строка Из ОбъектТаблицаУслуги Цикл
				РассчитатьСуммуСтроки(Строка);
			КонецЦикла;
		КонецЕсли;
	КонецЕсли;
	//}}
КонецПроцедуры

&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	// {{ Алексеев М.Д.: Расчитываем сумуму строки с учетом скидки
	//КоэффициентСкидки = 1 - ТекущиеДанные.Скидка / 100;
	//ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
	//Код расчета
	Если Не ЗначениеЗаполнено(Объект.ДС_СогласованнаяCкидка) Тогда
		КоэффициентСкидки = 1 - ТекущиеДанные.Скидка / 100;
		ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
	Иначе 
		Если (Объект.ДС_СогласованнаяCкидка + ТекущиеДанные.Скидка) > 100 Тогда
			Если Объект.ДС_СогласованнаяCкидка > 50 Тогда
				Сообщиние = Новый СообщениеПользователю;
				Сообщиние.Текст = "Значение скидки привышает 50%";
				Сообщиние.Поле = "Объект.ДС_СогласованнаяCкидка";
				Сообщиние.УстановитьДанные(Объект.ДС_СогласованнаяCкидка);
				Сообщиние.Сообщить();
			ИначеЕсли
				ТекущиеДанные.Скидка > 50 Тогда
				ТабличнаяЧасть = Объект.Товары;
				Для Каждого СтрокаТЧ ИЗ ТабличнаяЧасть Цикл
					Если  СтрокаТЧ.Скидка > 50 Тогда
						Индекс = ТабличнаяЧасть.Индекс(СтрокаТЧ);	
						Сообщиние = Новый СообщениеПользователю;
						Сообщиние.Текст = "Значение скидки привышает 50%";
						Сообщиние.Поле = СтрШаблон("Объект.Товары[%1].Скидка", Индекс);
						Сообщиние.Сообщить();
					Иначе
						Продолжить;
					КонецЕсли;
				КонецЦикла;
				
			КонецЕсли;
			ТекущиеДанные.Сумма = Число(Формат(0, "ЧН = 0"));
			Сообщение = Новый СообщениеПользователю();
            Сообщение.Текст = ("Скидка не должна привышать в сумме 100%");
            Сообщение.Сообщить();
			Возврат;
		КонецЕсли;
		ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * (1 - ((Объект.ДС_СогласованнаяCкидка + ТекущиеДанные.Скидка) / 100));
	КонецЕсли;
	//}}
КонецПроцедуры

